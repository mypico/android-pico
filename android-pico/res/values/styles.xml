<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the theme applied to the application or activity -->
    <style name="PicoTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/PicoActionBarStyle</item>
    </style>


    <style name="PicoActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="PicoCaptureActivityTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
    </style>

    <style name="TransparentActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#00000000</item>
    </style>

</resources>