<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgLogo"
        android:contentDescription="@string/splash_screen_welcome_img_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/passwords_now" />

    <TextView
        android:id="@+id/splash_screen_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textColor="@color/splash_secondary_text"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:text="@string/pico_project_url" />

    <TextView
        android:id="@+id/splash_screen_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        android:text="@string/splash_screen_welcome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/splash_screen_url"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textColor="@color/splash_secondary_text"
        android:text="@string/splash_screen_made_in_cam" />

</RelativeLayout>
